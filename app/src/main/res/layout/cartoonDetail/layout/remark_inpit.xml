<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">
    <EditText
        android:id="@+id/remark_input"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="说点什么吧。。。"
        android:background="@drawable/remark_input_back"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:paddingRight="20dp"
            android:background="@drawable/my_cartoon_detail_label"
            android:textColor="#FFFFFF"
            android:text="目录"
            android:textSize="20dp"
            android:gravity="right|center_vertical"></TextView>
        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/remark_input_up"
                android:layout_marginTop="5dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/up"/>
            <ImageView
                android:id="@+id/remark_input_down"
                android:layout_marginBottom="5dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/downwhite"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/cartoon_detail_update_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:textSize="16dp"
        android:textColor="#D7D7D7"
        android:text="连载中 每周三、五更新"></TextView>

</LinearLayout>