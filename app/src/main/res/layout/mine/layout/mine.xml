<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_background"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/my_primary">
        <ImageView
            android:layout_marginTop="50dp"
            android:id="@+id/mine_user_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/a1"/>
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/mine_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名"
            android:textSize="20dp"
            android:textColor="#ffffff"/>
        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/mine_user_autograph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="美景可念而不可达，佳人可望而不可及"
            android:textSize="18dp"/>

    </LinearLayout>

    <LinearLayout
        android:background="@drawable/mine_item_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <LinearLayout
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:id="@+id/mine_like"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff">
            <ImageView
                android:layout_marginLeft="15dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/mine_like"/>
            <TextView
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="喜欢"
                android:textSize="24dp"/>
            <ImageView
                android:layout_marginLeft="220dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/right_arrow"/>
        </LinearLayout>
        <LinearLayout
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:id="@+id/mine_collect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff">
            <ImageView
                android:layout_marginLeft="15dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/mien_collect"/>
            <TextView
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="收藏"
                android:textSize="24dp"/>
            <ImageView
                android:layout_marginLeft="220dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/right_arrow"/>
        </LinearLayout>
        <LinearLayout
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:id="@+id/mine_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff">
            <ImageView
                android:layout_marginLeft="15dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/mine_remark"/>
            <TextView
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="评论"
                android:textSize="24dp"/>
            <ImageView
                android:layout_marginLeft="220dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/right_arrow"/>
        </LinearLayout>
        <LinearLayout
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:id="@+id/mine_look_through"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff">
            <ImageView
                android:layout_marginLeft="15dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/mine_lookthrough"/>
            <TextView
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="我的浏览"
                android:textSize="24dp"/>
            <ImageView
                android:layout_marginLeft="170dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/right_arrow"/>
        </LinearLayout>

    </LinearLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:background="@drawable/mine_logout_back"
        android:gravity="center"
        android:layout_margin="25dp"
        android:padding="15dp"
        android:id="@+id/mine_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="退出登录"
        android:textSize="15dp"/>
    </ScrollView>
</LinearLayout>