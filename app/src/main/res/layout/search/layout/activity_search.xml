<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.search.SearchActivity"
    android:background="@color/my_background"
    android:layout_marginTop="20dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <SearchView
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:background="@drawable/my_search_back"

            android:id="@+id/home_search_view">

        </SearchView>
        <TextView
            android:id="@+id/home_search_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="大家都在搜"
            android:textSize="20dp"
            android:textColor="@color/my_primary" />
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/search_cartoon_1"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="乱世神罚"
                android:textSize="14dp"
                android:textColor="#63B009"
                android:layout_marginRight="10dp"
                android:background="@drawable/my_fillet_back_green"/>

            <TextView
                android:id="@+id/search_cartoon_2"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="乱世神罚"
                android:textSize="14dp"
                android:textColor="#09A3B0"
                android:layout_marginRight="10dp"
                android:background="@drawable/my_fillet_back_blue"/>

            <TextView
                android:id="@+id/search_cartoon_3"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="神罚神罚"
                android:textSize="14dp"
                android:textColor="#B00972"
                android:layout_marginRight="10dp"
                android:background="@drawable/my_fillet_back_pink"/>


        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/search_cartoon_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/my_fillet_back_purple"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:paddingRight="15dp"
                android:paddingBottom="10dp"
                android:text="神罚"
                android:textColor="#560BEE"
                android:textSize="14dp" />


            <TextView
                android:id="@+id/search_cartoon_5"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="乱世神罚"
                android:textSize="14dp"
                android:textColor="#B00972"
                android:layout_marginRight="10dp"
                android:background="@drawable/my_fillet_back_pink"/>



        </LinearLayout>
    </LinearLayout>



</LinearLayout>